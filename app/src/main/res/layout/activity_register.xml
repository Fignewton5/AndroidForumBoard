<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    tools:context="com.tonyanziano.cs496finalproject.Register">

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:id="@+id/register_header"
        android:text="@string/register_header"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginBottom="100dp"
        />

    <!-- Input Fields -->
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/register_header"
        android:id="@+id/username_input_register"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:hint="user123"/>
    <EditText
        android:id="@+id/password_input_register"
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/username_input_register"
        android:layout_centerHorizontal="true"
        android:hint="*******"
        android:layout_marginBottom="10dp"/>

    <!-- Button Row -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/password_input_register"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/login_register"
            android:text="@string/button_register"
            android:onClick="submitRegister"/>

    </LinearLayout>

    <!-- Input Labels -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/username_input_register"
        android:text="@string/login_username"
        android:layout_alignLeft="@id/username_input_register"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/password_input_register"
        android:text="@string/login_password"
        android:layout_alignLeft="@id/password_input_register"
        android:layout_centerInParent="true"/>

</RelativeLayout>
